    <maven.dependency.plugin.version>3.0.0</maven.dependency.plugin.version>
    <maven.versions.plugin.version>2.3</maven.versions.plugin.version>
    <maven.enforcer.plugin.version>1.4.1</maven.enforcer.plugin.version>
    <maven.enforcer.plugin.extra.rules.version>1.0-beta-6</maven.enforcer.plugin.extra.rules.version>
    <maven.scm.provider.version>2.1.1</maven.scm.provider.version>
    <maven.jgitflow.plugin.version>1.0-m5.1</maven.jgitflow.plugin.version>
    <maven.gitflow.helper.plugin.version>1.7.1</maven.gitflow.helper.plugin.version>    
    
    <!-- =================================================== -->
    <!-- Common project dependency manage version properties -->
    <!-- =================================================== -->
    <sl4j.version>1.7.21</sl4j.version>
    <logback.version>1.1.8</logback.version>
    <logback.core.version>1.1.8</logback.core.version>
